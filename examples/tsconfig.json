{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "./",
        "outDir": "./web",
        "typeRoots": [
            "../dist/types"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["../dist/types/*.d.ts"],
}
